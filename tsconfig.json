{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "build",
    "dist",
    "**/*.test.ts",
    "node_modules/react-native-maps/**/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": [
      "react-native",
      "expo",
      "node"
    ],
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "src/*": [
        "client/src/*"
      ]
    },
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "extends": "expo/tsconfig.base"
}

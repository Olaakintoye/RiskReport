{
  "expo": {
    "name": "CDInvestmentPro",
    "slug": "CDInvestmentPro",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ola.CDInvestmentPro",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSPhotoLibraryUsageDescription": "Allow CDInvestmentPro to access your photos to upload videos.",
        "NSCameraUsageDescription": "Allow CDInvestmentPro to access your camera to record videos."
      }
    },
    "android": {
      "backgroundColor": "#ffffff",
      "package": "com.ola.CDInvestmentPro",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "scheme": "cdinvestmentpro",
    "newArchEnabled": true,
    "developmentClient": {
      "silentLaunch": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      },
      "apiBase": "http://192.168.1.106:3001",
      "stressBase": "http://192.168.1.106:3000"
    }
  }
} 
{
  "expo": {
    "name": "CDInvestmentPro",
    "slug": "CDInvestmentPro",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/app-icon-1024.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ola.CDInvestmentPro",
      "buildNumber": "1",
      "associatedDomains": ["applinks:cdinvestmentpro.com"],
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        },
        "NSPhotoLibraryUsageDescription": "CDInvestmentPro needs access to your photo library to upload images for portfolio documentation.",
        "NSCameraUsageDescription": "CDInvestmentPro needs access to your camera to capture photos for portfolio documentation.",
        "NSLocationWhenInUseUsageDescription": "CDInvestmentPro may use your location to provide relevant market data and compliance features.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "backgroundColor": "#ffffff",
      "package": "com.ola.CDInvestmentPro",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "scheme": "cdinvestmentpro",
    "newArchEnabled": true,
    "developmentClient": {
      "silentLaunch": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "apiBase": "https://your-production-api.com",
      "stressBase": "https://your-production-api.com",
      "eas": {
        "projectId": "52d31adc-11b2-4615-8dda-ba54f2e67eb8"
      }
    },
    "owner": "olaakin"
  }
}
